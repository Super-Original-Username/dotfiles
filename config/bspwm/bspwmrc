#! /bin/sh

sxhkd &

bspc monitor -d           I II III IV V

#bspc config border_width 1 #2
bspc config border_width 0 #2
bspc config window_gap 12 #15

#bspc config border_radius 7

bspc config split_ratio 0.52
bspc config borderless_monocle true
bspc config gapless_monocle false

np-applet &

# sets the wallpaper
feh --bg-fill ~/.config/wall.png &
# calls pywal with the current wallpaper
# wal -i ~/.config/wall.png &
#
# to disable/enable betterlockscreen service:
# systemctl enable/disable betterlockscreen@fison
betterlockscreen -u ~/.config/wall.png &

# sources the colors generated by pywal for the terminal
. "${HOME}/.cache/wal/colors/sh" &
# set border colors for bsp tiles
bspc config normal_border_color "$color1" &

bspc config active_border_color "$color2" &

bspc config focused_border_color "$color15" &

#Use the line below if you are on bspwm >= 0.9.4

bspc config presel_feedback_color "$color1" &

# makes focus follow the cursor
bspc config focus_follows_pointer false

#bspc rule -a Termite desktop='^1' follow=on focus=on &
bspc rule -a firefox desktop='^2' follow=on focus=on &
bspc rule -a Emacs desktop='^3' follow=on focus=on state=tiled &
bspc rule -a discord desktop='^4' follow=on focus=on &
bspc rule -a Spotify desktop='^5' follow=on focus=on &
bspc rule -a Zathura state=tiled &

#polybar main &
$HOME/.config/polybar/launch.sh &
# sets the picom config
picom --config $HOME/.config/picom/picom.conf &

#rebinds caps to left control
xmodmap -e "remove Lock = Caps_Lock"
xmodmap -e "keysym Caps_Lock = Control_L"
xmodmap -e "add Control = Control_L"
